    .hex-3 { bottom: 10%; left: 12%; opacity: 0.2; animation: floatHex 12s ease-in-out infinite 2s; }
    .hex-4 { bottom: 15%; right: 5%; opacity: 0.3; animation: floatHex 9s ease-in-out infinite 0.5s; }
    .hex-5 { top: 45%; left: 2%; opacity: 0.15; animation: floatHex 11s ease-in-out infinite 3s; }
    .hex-6 { top: 30%; right: 2%; opacity: 0.22; animation: floatHex 7s ease-in-out infinite 1.5s; }
    @keyframes floatHex {
      0%, 100% { transform: translateY(0) rotate(0deg); }
