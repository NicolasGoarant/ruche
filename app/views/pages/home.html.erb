<!-- LEAFLET -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
<script>
  const map = L.map('map').setView([48.692, 6.184], 13);

  L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
    attribution: '¬© OpenStreetMap',
    maxZoom: 19
  }).addTo(map);

  const layers = {
    admin: L.layerGroup().addTo(map),
    fle: L.layerGroup().addTo(map),
    entrep: L.layerGroup().addTo(map),
    culture: L.layerGroup().addTo(map)
  };

  const userLayer = L.layerGroup().addTo(map);
  const colors = { admin: '#C45A2A', fle: '#3A7A5A', entrep: '#F5A800', culture: '#1A5B9A' };

  function mkIcon(color, emoji) {
    return L.divIcon({
      html: `<div style="width:42px;height:42px;border-radius:50%;background:${color};display:flex;align-items:center;justify-content:center;border:3px solid white;box-shadow:0 3px 10px rgba(0,0,0,0.25);font-size:20px;">${emoji}</div>`,
      iconSize: [42,42],
      iconAnchor: [21,42],
      popupAnchor: [0,-47],
      className: ''
    });
  }

  const staticPlaces = [
    { type:'admin', lat:48.693, lng:6.180, title:'OFII Nancy', desc:'Office Fran√ßais de l\'Immigration', emoji:'üìã' },
    { type:'admin', lat:48.688, lng:6.191, title:'Pr√©fecture', desc:'Titres de s√©jour, naturalisation', emoji:'üèõ' },
    { type:'entrep', lat:48.700, lng:6.177, title:'BGE Grand Est', desc:'Accompagnement cr√©ation d\'entreprise', emoji:'üöÄ' }
  ];

  staticPlaces.forEach(p => {
    L.marker([p.lat, p.lng], { icon: mkIcon(colors[p.type], p.emoji) })
      .bindPopup(`<strong>${p.title}</strong><br>${p.desc}`)
      .addTo(layers[p.type]);
  });

  const popupContent = `
  <div style="min-width: 240px;">
    ${c.image_url ? `<img src="${c.image_url}" style="width:100%;height:140px;object-fit:cover;border-radius:8px;margin-bottom:10px;">` : ''}
    <strong style="font-size:1.05rem;display:block;margin-bottom:6px;">${c.title}</strong>
    <p style="font-size:0.9rem;color:#666;margin-bottom:8px;">${c.description.substring(0, 80)}...</p>
    <small style="color:#999;">üêù ${c.author}</small>
    <a href="/contributions/${c.id}" style="display:inline-block;margin-top:10px;background:#F5A800;color:#0F0E0A;padding:0.4rem 0.9rem;border-radius:6px;text-decoration:none;font-weight:600;font-size:0.85rem;">Voir d√©tails ‚Üí</a>
  </div>
`;

  fetch('/contributions/map_data')
    .then(r => r.json())
    .then(contribs => {
      contribs.forEach(c => {
        const layerType = c.type === 'fle' ? 'fle' :
                          c.type === 'event' ? 'culture' :
                          c.type === 'enterprise' ? 'entrep' : 'culture';

        const typeLabel = c.type === 'fle' ? 'Cours de FLE' :
                          c.type === 'event' ? '√âv√©nement' :
                          c.type === 'enterprise' ? 'Entreprise' : 'T√©moignage';

        const popupContent = `
          <div style="min-width: 260px; font-family: 'DM Sans', sans-serif;">
            ${c.image_url ? `
              <img src="${c.image_url}"
                   style="width:100%; height:140px; object-fit:cover; border-radius:8px; margin-bottom:12px;">
            ` : ''}
            <div style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.05em; color: ${c.color}; font-weight: 700; margin-bottom: 6px;">
              ${c.emoji} ${typeLabel}
            </div>
            <strong style="font-size: 1.05rem; display: block; margin-bottom: 8px; color: #1a1814; line-height: 1.3;">
              ${c.title}
            </strong>
            <p style="font-size: 0.9rem; color: #666; margin-bottom: 10px; line-height: 1.5;">
              ${c.description.length > 100 ? c.description.substring(0, 100) + '...' : c.description}
            </p>
            <div style="font-size: 0.8rem; color: #999; margin-bottom: 12px;">
              üêù ${c.author} ¬∑ ${c.location}
            </div>
            <a href="/contributions/${c.id}"
               style="display: inline-block; background: #F5A800; color: #0F0E0A; padding: 0.5rem 1rem;
                      border-radius: 6px; text-decoration: none; font-weight: 600; font-size: 0.85rem;
                      transition: all 0.2s;"
               onmouseover="this.style.background='#E8920A'"
               onmouseout="this.style.background='#F5A800'">
              Voir d√©tails ‚Üí
            </a>
          </div>
        `;

        L.marker([c.latitude, c.longitude], { icon: mkIcon(c.color, c.emoji) })
          .bindPopup(popupContent, { maxWidth: 300 })
          .addTo(layers[layerType]);
      });
    })
    .catch(e => console.log('Erreur chargement contributions:', e));

  document.querySelectorAll('.legend-item').forEach(item => {
    item.addEventListener('click', () => {
      const layer = item.dataset.layer;
      const isActive = item.classList.contains('active');

      if (isActive) {
        map.removeLayer(layers[layer]);
        item.classList.remove('active');
      } else {
        layers[layer].addTo(map);
        item.classList.add('active');
      }
    });
  });

  let watchId = null;
  document.getElementById('locate-btn').addEventListener('click', () => {
    if (watchId) {
      navigator.geolocation.clearWatch(watchId);
      watchId = null;
      userLayer.clearLayers();
      document.getElementById('locate-btn').textContent = 'üìç Me localiser';
      return;
    }

    if ('geolocation' in navigator) {
      document.getElementById('locate-btn').textContent = '‚è≥ Recherche...';

      navigator.geolocation.getCurrentPosition(pos => {
        const { latitude, longitude, accuracy } = pos.coords;

        userLayer.clearLayers();

        if (accuracy) {
          L.circle([latitude, longitude], {
            radius: Math.min(accuracy, 1000),
            color: '#1976D2',
            fillColor: '#1976D2',
            fillOpacity: 0.15,
            weight: 1
          }).addTo(userLayer);
        }

        L.circleMarker([latitude, longitude], {
          radius: 9,
          color: '#ffffff',
          fillColor: '#1976D2',
          fillOpacity: 1,
          weight: 3
        }).addTo(userLayer);

        map.flyTo([latitude, longitude], 14);
        document.getElementById('locate-btn').textContent = 'üõë Arr√™ter';
      }, err => {
        alert('Active la g√©olocalisation dans les param√®tres de ton navigateur.');
        document.getElementById('locate-btn').textContent = 'üìç Me localiser';
      }, {
        enableHighAccuracy: true,
        timeout: 10000
      });
    }
  });

  // BURGER MENU TOGGLE
  const burgerBtn = document.getElementById('burgerBtn');
  const mobileMenu = document.getElementById('mobileMenu');

  burgerBtn.addEventListener('click', () => {
    burgerBtn.classList.toggle('active');
    mobileMenu.classList.toggle('active');
    document.body.style.overflow = mobileMenu.classList.contains('active') ? 'hidden' : '';
  });

  // Fermer le menu au clic sur un lien
  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      burgerBtn.classList.remove('active');
      mobileMenu.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>

