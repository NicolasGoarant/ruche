    }
    .hero::after {
      content: ''; position: absolute; top: 50%; left: 50%;
      transform: translate(-50%, -50%); width: 700px; height: 400px;
      background: radial-gradient(ellipse, rgba(245,168,0,0.08) 0%, transparent 70%); pointer-events: none;
