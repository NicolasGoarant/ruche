    function mkIcon(color, emoji) {
      return L.divIcon({
        html: '<div style="width:42px;height:42px;border-radius:50%;background:' + color + ';display:flex;align-items:center;justify-content:center;border:3px solid white;box-shadow:0 3px 10px rgba(0,0,0,0.25);font-size:20px;">' + emoji + '</div>',
        iconSize: [42,42], iconAnchor: [21,42], popupAnchor: [0,-47], className: ''
      });
    }

    var staticPlaces = [
      { type:'admin', lat:48.693, lng:6.180, title:'OFII Nancy', desc:"Office Fran\u00e7ais de l'Immigration", emoji:'\ud83d\udccb' },
      { type:'admin', lat:48.688, lng:6.191, title:'Pr\u00e9fecture', desc:'Titres de s\u00e9jour, naturalisation', emoji:'\ud83c\udfdb' },
      { type:'entrep', lat:48.700, lng:6.177, title:'BGE Grand Est', desc:"Accompagnement cr\u00e9ation d'entreprise", emoji:'\ud83d\ude80' }
    ];
    staticPlaces.forEach(function(p) {
      L.marker([p.lat, p.lng], { icon: mkIcon(colors[p.type], p.emoji) }).bindPopup('<strong>' + p.title + '</strong><br>' + p.desc).addTo(layers[p.type]);
    });

    fetch('<%= map_data_contributions_path %>')
      .then(function(r) { return r.json(); })
      .then(function(contribs) {
        contribs.forEach(function(c) {
          var layerType = c.type === 'fle' ? 'fle' : c.type === 'event' ? 'culture' : c.type === 'enterprise' ? 'entrep' : 'culture';
          var typeLabels = { fle: i18n.filter_fle, event: i18n.filter_community, enterprise: i18n.filter_entrepreneurship, portrait: i18n.filter_rights };
          var typeLabel = typeLabels[c.type] || c.type;
          var desc = c.description.length > 100 ? c.description.substring(0, 100) + '...' : c.description;
          var popup =
            '<div style="min-width:260px;font-family:DM Sans,sans-serif;">' +
              (c.image_url ? '<img src="' + c.image_url + '" style="width:100%;height:140px;object-fit:cover;border-radius:8px;margin-bottom:12px;">' : '') +
              '<div style="font-size:0.7rem;text-transform:uppercase;letter-spacing:0.05em;color:' + c.color + ';font-weight:700;margin-bottom:6px;">' + c.emoji + ' ' + typeLabel + '</div>' +
              '<strong style="font-size:1.05rem;display:block;margin-bottom:8px;color:#1a1814;line-height:1.3;">' + c.title + '</strong>' +
              '<p style="font-size:0.9rem;color:#666;margin-bottom:10px;line-height:1.5;">' + desc + '</p>' +
              '<div style="font-size:0.8rem;color:#999;margin-bottom:12px;">\ud83e\uddf5 ' + c.author + ' \u00b7 ' + c.location + '</div>' +
              '<a href="<%= contributions_path %>/' + c.id + '" style="display:inline-block;background:#F5A800;color:#0F0E0A;padding:0.5rem 1rem;border-radius:6px;text-decoration:none;font-weight:600;font-size:0.85rem;">' + i18n.view_details + ' \u2192</a>' +
            '</div>';
          L.marker([c.latitude, c.longitude], { icon: mkIcon(c.color, c.emoji) }).bindPopup(popup, { maxWidth: 300 }).addTo(layers[layerType]);
        });
      }).catch(function(e) { console.log('Erreur:', e); });

    document.querySelectorAll('.legend-item').forEach(function(item) {
      item.addEventListener('click', function() {
        var layer = item.dataset.layer;
        if (item.classList.contains('active')) { map.removeLayer(layers[layer]); item.classList.remove('active'); }
        else { layers[layer].addTo(map); item.classList.add('active'); }
      });
    });
    document.getElementById('mobileLayerSelect').addEventListener('change', function(e) {
      var val = e.target.value;
      Object.keys(layers).forEach(function(key) {
        if (val === 'all' || val === key) { layers[key].addTo(map); } else { map.removeLayer(layers[key]); }
      });
    });

    var watchId = null;
    var locateBtn = document.getElementById('locate-btn');
    locateBtn.addEventListener('click', function() {
      if (watchId) { navigator.geolocation.clearWatch(watchId); watchId = null; userLayer.clearLayers(); locateBtn.textContent = '\ud83d\udccd'; locateBtn.classList.remove('active'); return; }
      if ('geolocation' in navigator) {
        locateBtn.textContent = '\u23f3';
        navigator.geolocation.getCurrentPosition(function(pos) {
          var lat = pos.coords.latitude, lng = pos.coords.longitude, acc = pos.coords.accuracy;
          userLayer.clearLayers();
          if (acc) { L.circle([lat, lng], { radius: Math.min(acc, 1000), color: '#1976D2', fillColor: '#1976D2', fillOpacity: 0.15, weight: 1 }).addTo(userLayer); }
          L.circleMarker([lat, lng], { radius: 9, color: '#ffffff', fillColor: '#1976D2', fillOpacity: 1, weight: 3 }).addTo(userLayer);
          map.flyTo([lat, lng], 14); locateBtn.textContent = '\ud83d\uded1'; locateBtn.classList.add('active');
        }, function() {
          alert('<%= t("map.geolocation_error", default: "Active la g√©olocalisation dans les param√®tres de ton navigateur.") %>');
          locateBtn.textContent = '\ud83d\udccd';
        }, { enableHighAccuracy: true, timeout: 10000 });
      }
    });
  </script>
<% end %>
