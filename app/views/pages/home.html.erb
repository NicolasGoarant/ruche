      #map { height: 300px; }
      .map-controls { display: none !important; }
      .map-controls-mobile { display: flex; }
      .map-subtitle { font-size: 1.3rem; }
      .needs-grid { grid-template-columns: 1fr 1fr; }
      .bidar-section { padding: 2.5rem 1.5rem; }
      .bidar-section blockquote { font-size: 1.3rem; }
    }
    @media (max-width: 480px) { .needs-grid { grid-template-columns: 1fr; } }
    @media (prefers-reduced-motion: reduce) { .reveal, .hex-float { animation: none !important; opacity: 1 !important; transform: none !important; } }
  </style>
<% end %>

