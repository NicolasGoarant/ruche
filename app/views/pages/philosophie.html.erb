<% content_for :nav_active, 'philosophie' %>
<% content_for :title, t('philosophie.page_title') %>

<% content_for :styles do %>
  <style>
    /* === PHILOSOPHIE-SPECIFIC STYLES === */

    /* HERO */
    .hero-philo {
      background: var(--color-dark);
      padding: 5rem 2rem 4rem;
      text-align: center;
      position: relative;
      overflow: hidden;
    }

    .hero-philo::before {
      content: '';
      position: absolute;
      top: -50%; left: -20%;
      width: 140%; height: 200%;
      background: radial-gradient(ellipse at 30% 50%, rgba(245, 168, 0, 0.06) 0%, transparent 60%),
                  radial-gradient(ellipse at 70% 50%, rgba(196, 90, 42, 0.04) 0%, transparent 60%);
      pointer-events: none;
    }

    .hero-philo h1 {
      font-family: var(--font-display);
      font-size: clamp(2.5rem, 5vw, 3.5rem);
      font-weight: 800;
      color: white;
      line-height: 1.2;
      margin-bottom: 1.5rem;
      max-width: 700px;
      margin-left: auto;
      margin-right: auto;
      position: relative;
    }

    .hero-philo em {
      color: var(--color-primary);
      font-style: italic;
    }

    .hero-philo p {
      color: #aaa;
      font-size: 1.15rem;
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.7;
      position: relative;
    }

    /* MANIFESTE */
    .manifeste {
      padding: 5rem 0;
      background: white;
    }

    .manifeste-intro {
      font-family: var(--font-display);
      font-size: 1.5rem;
      font-weight: 400;
      line-height: 1.7;
      color: #333;
      text-align: center;
      margin-bottom: 3rem;
      font-style: italic;
      position: relative;
      padding: 0 1rem;
    }

    .manifeste-intro::before {
      content: '"';
      font-family: var(--font-display);
      font-size: 5rem;
      color: var(--color-primary);
      position: absolute;
      top: -2rem;
      left: 50%;
      transform: translateX(-50%);
      opacity: 0.3;
      line-height: 1;
    }

    .manifeste-body h2 {
      font-family: var(--font-display);
      font-size: 1.8rem;
      font-weight: 800;
      color: var(--color-dark);
      margin-bottom: 1rem;
      margin-top: 3rem;
    }

    .manifeste-body h2:first-child { margin-top: 0; }

    .manifeste-body p {
      font-size: 1.05rem;
      line-height: 1.8;
      color: #444;
      margin-bottom: 1rem;
    }

    .accent-line {
      width: 60px;
      height: 4px;
      background: var(--color-primary);
      border-radius: 2px;
      margin: 2.5rem 0;
    }

    /* VALEURS */
    .valeurs-section {
      padding: 5rem 0;
      background: var(--color-bg-alt);
    }

    .valeurs-section .section-title,
    .pour-qui .section-title,
    .cta-section h2 {
      font-family: var(--font-display);
      font-size: 2.2rem;
      font-weight: 800;
      text-align: center;
      margin-bottom: 0.5rem;
    }

    .valeurs-section .section-subtitle,
    .pour-qui .section-subtitle {
      text-align: center;
      color: var(--color-text-muted);
      margin-bottom: 3rem;
    }

    .valeurs-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .valeur-card {
      background: white;
      border-radius: var(--radius-lg);
      padding: 2rem;
      border: 1px solid var(--color-border);
      transition: all 0.3s;
      position: relative;
      overflow: hidden;
    }

    .valeur-card::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0;
      height: 4px;
      background: var(--card-accent, var(--color-primary));
    }

    .valeur-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.08);
    }

    .valeur-emoji {
      font-size: 2.5rem;
      margin-bottom: 1rem;
      display: block;
    }

    .valeur-card h3 {
      font-family: var(--font-display);
      font-size: 1.25rem;
      font-weight: 700;
      color: var(--color-dark);
      margin-bottom: 0.8rem;
    }

    .valeur-card p {
      font-size: 0.95rem;
      color: #555;
      line-height: 1.7;
    }

    /* NOM */
    .nom-section {
      padding: 5rem 0;
      background: white;
    }

    .nom-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 3rem;
      align-items: center;
    }

    .nom-visual { text-align: center; }

    .tisserand-icon {
      font-size: 6rem;
      display: block;
      margin-bottom: 1rem;
      animation: float 3s ease-in-out infinite;
    }

    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }

    .tisserand-caption {
      font-family: var(--font-display);
      font-style: italic;
      color: var(--color-text-light);
      font-size: 1rem;
    }

    .nom-text h2 {
      font-family: var(--font-display);
      font-size: 1.8rem;
      font-weight: 800;
      color: var(--color-dark);
      margin-bottom: 1.2rem;
    }

    .nom-text p {
      font-size: 1.05rem;
      line-height: 1.8;
      color: #444;
      margin-bottom: 1rem;
    }

    .nom-highlight {
      background: #FFF8E7;
      border-left: 4px solid var(--color-primary);
      padding: 1.2rem 1.5rem;
      border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
      margin: 1.5rem 0;
    }

    .nom-highlight p {
      font-family: var(--font-display);
      font-style: italic;
      color: #333;
      font-size: 1.1rem;
      margin: 0;
    }

    /* POUR QUI */
    .pour-qui {
      padding: 5rem 0;
      background: var(--color-dark);
      color: white;
    }

    .pour-qui .section-title { color: white; }
    .pour-qui .section-subtitle { color: #888; }

    .public-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
      gap: 1.5rem;
      max-width: 1000px;
      margin: 0 auto;
      padding: 0 2rem;
    }

    .public-card {
      border: 1px solid #333;
      border-radius: var(--radius-md);
      padding: 1.8rem;
      transition: all 0.3s;
    }

    .public-card:hover {
      border-color: var(--color-primary);
      background: rgba(245, 168, 0, 0.05);
    }

    .public-card .pub-emoji {
      font-size: 2rem;
      margin-bottom: 0.8rem;
      display: block;
    }

    .public-card h3 {
      font-family: var(--font-display);
      font-size: 1.15rem;
      font-weight: 700;
      margin-bottom: 0.6rem;
    }

    .public-card p {
      font-size: 0.9rem;
      color: #aaa;
      line-height: 1.6;
    }

    /* CTA SECTION */
    .cta-section {
      padding: 5rem 0;
      background: white;
      text-align: center;
    }

    .cta-section p {
      color: var(--color-text-muted);
      font-size: 1.05rem;
      max-width: 550px;
      margin: 0 auto 2rem;
      line-height: 1.7;
    }

    .cta-buttons {
      display: flex;
      gap: 1rem;
      justify-content: center;
      flex-wrap: wrap;
    }

    .cta-secondary-dark {
      border: 2px solid var(--color-dark);
      color: var(--color-dark);
      padding: 0.9rem 2rem;
      border-radius: var(--radius-pill);
      text-decoration: none;
      font-weight: 600;
      font-size: 1.05rem;
      transition: all 0.2s;
    }

    .cta-secondary-dark:hover {
      background: var(--color-dark);
      color: white;
    }

    /* RESPONSIVE PHILOSOPHIE */
    @media (max-width: 768px) {
      .hero-philo { padding: 3.5rem 1.5rem 3rem; }
      .hero-philo h1 { font-size: 2rem; }
      .manifeste { padding: 3rem 0; }
      .manifeste-intro { font-size: 1.2rem; }
      .manifeste-body h2 { font-size: 1.4rem; margin-top: 2rem; }
      .valeurs-grid, .public-grid { grid-template-columns: 1fr; }

      .nom-grid {
        grid-template-columns: 1fr;
        gap: 2rem;
      }
      .nom-visual { order: -1; }
      .tisserand-icon { font-size: 4rem; }

      .valeurs-section, .pour-qui, .cta-section, .nom-section { padding: 3rem 0; }

      .valeurs-section .section-title,
      .pour-qui .section-title,
      .cta-section h2 { font-size: 1.8rem; }
    }
  </style>
<% end %>

