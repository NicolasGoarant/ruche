<% content_for :scripts do %>
  <script>
    // === TYPE SELECTOR ===
    const typeOptions = document.querySelectorAll('.type-option');
    const typeInput = document.getElementById('contribution_type');

    typeOptions.forEach(option => {
      option.addEventListener('click', () => {
        typeOptions.forEach(opt => opt.classList.remove('selected'));
        option.classList.add('selected');
        typeInput.value = option.dataset.type;
      });
    });

    // === FLAG PICKER ===
    const flagBtns = document.querySelectorAll('.flag-btn');
    const flagInput = document.getElementById('author_flag_hidden');
    // Default
    flagInput.value = 'ğŸŒ';
    document.querySelector('.flag-btn[data-flag="ğŸŒ"]').classList.add('selected');

    flagBtns.forEach(btn => {
      btn.addEventListener('click', () => {
        flagBtns.forEach(b => b.classList.remove('selected'));
        btn.classList.add('selected');
        flagInput.value = btn.dataset.flag;
      });
    });

    // === CONTACT MERGE ===
    const emailInput = document.getElementById('contact-email');
    const phoneInput = document.getElementById('contact-phone');
    const contactHidden = document.getElementById('contact_info_hidden');

    function mergeContact() {
      const parts = [];
      if (emailInput.value.trim()) parts.push(emailInput.value.trim());
      if (phoneInput.value.trim()) parts.push(phoneInput.value.trim());
      contactHidden.value = parts.join(' Â· ');
    }
    emailInput.addEventListener('input', mergeContact);
    phoneInput.addEventListener('input', mergeContact);

    // === PHOTO UPLOAD ===
    const fileInput = document.getElementById('file-input');
    const uploadZone = document.getElementById('upload-zone');
    const previewContainer = document.getElementById('preview-container');

    fileInput.addEventListener('change', handleFiles);

    uploadZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      uploadZone.classList.add('dragover');
    });
    uploadZone.addEventListener('dragleave', () => uploadZone.classList.remove('dragover'));
    uploadZone.addEventListener('drop', (e) => {
      e.preventDefault();
      uploadZone.classList.remove('dragover');
      fileInput.files = e.dataTransfer.files;
      handleFiles();
    });

    function handleFiles() {
      const files = Array.from(fileInput.files);
      if (files.length === 0) return;
      previewContainer.style.display = 'grid';
      previewContainer.innerHTML = '';
      files.slice(0, 5).forEach((file, index) => {
        if (file.type.startsWith('image/')) {
          const reader = new FileReader();
          reader.onload = (e) => {
            const preview = document.createElement('div');
            preview.className = 'preview-item';
            preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview"><button type="button" class="remove-photo" data-index="' + index + '">Ã—</button>';
            previewContainer.appendChild(preview);
          };
          reader.readAsDataURL(file);
        }
      });
    }

    previewContainer.addEventListener('click', (e) => {
      if (e.target.classList.contains('remove-photo')) {
        const index = parseInt(e.target.dataset.index);
        const dt = new DataTransfer();
        Array.from(fileInput.files).forEach((file, i) => {
          if (i !== index) dt.items.add(file);
        });
        fileInput.files = dt.files;
        handleFiles();
        if (dt.files.length === 0) previewContainer.style.display = 'none';
      }
    });

    // === FORM VALIDATION â€” scroll to first incomplete section ===
    document.getElementById('contribution-form').addEventListener('submit', function(e) {
      // Check type
      if (!typeInput.value) {
        e.preventDefault();
        scrollToSection('section-type');
        return;
      }
      // Check required fields
      const title = document.querySelector('input[name="contribution[title]"]');
      const desc = document.querySelector('textarea[name="contribution[description]"]');
      const loc = document.querySelector('input[name="contribution[location]"]');

      if (!title.value.trim()) {
        e.preventDefault();
        scrollToSection('section-info');
        title.focus();
        return;
      }
      if (!desc.value.trim()) {
        e.preventDefault();
        scrollToSection('section-info');
        desc.focus();
        return;
      }
      if (!loc.value.trim()) {
        e.preventDefault();
        scrollToSection('section-info');
        loc.focus();
        return;
      }

      // Merge contact before submit
      mergeContact();
    });

    function scrollToSection(id) {
      const section = document.getElementById(id);
      section.scrollIntoView({ behavior: 'smooth', block: 'center' });
      section.classList.add('highlight');
      setTimeout(() => section.classList.remove('highlight'), 2000);
    }
  </script>
<% end %>
