<% content_for :nav_active, 'assistant' %>
<% content_for :title, t('assistant.page_title') %>

<% content_for :styles do %>
  <style>
    /* === ASSISTANT-SPECIFIC STYLES === */

    .assistant-container {
      max-width: 900px;
      margin: 2rem auto;
      padding: 0 2rem;
      flex: 1;
    }

    .assistant-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .assistant-header h1 {
      font-family: var(--font-display);
      font-size: 2.5rem;
      color: var(--color-dark);
      margin-bottom: 0.5rem;
    }

    .assistant-header p {
      color: var(--color-text-muted);
      font-size: 1.1rem;
    }

    .disclaimer {
      background: #FFF8E7;
      border-left: 4px solid var(--color-primary);
      padding: 1.2rem;
      border-radius: var(--radius-sm);
      margin-bottom: 2rem;
      font-size: 0.95rem;
      line-height: 1.6;
    }

    .chat-container {
      background: white;
      border-radius: var(--radius-md);
      box-shadow: 0 4px 20px rgba(0,0,0,0.1);
      display: flex;
      flex-direction: column;
      height: 600px;
    }

    .messages {
      flex: 1;
      padding: 2rem;
      overflow-y: auto;
    }

    .message {
      margin-bottom: 1.5rem;
      display: flex;
      gap: 1rem;
    }

    .message.user {
      flex-direction: row-reverse;
    }

    .message-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.3rem;
      flex-shrink: 0;
    }

    .message.assistant .message-avatar {
      background: var(--color-primary);
    }

    .message.user .message-avatar {
      background: var(--color-dark);
    }

    .message-content {
      max-width: 70%;
      padding: 1rem 1.3rem;
      border-radius: var(--radius-md);
      line-height: 1.6;
    }

    .message.assistant .message-content {
      background: #f8f8f8;
      color: var(--color-text);
    }

    .message.assistant .message-content h2 {
      font-size: 1.1rem;
      margin: 1rem 0 0.5rem 0;
      color: var(--color-dark);
    }

    .message.assistant .message-content strong {
      color: var(--color-dark);
    }

    .message.user .message-content {
      background: var(--color-primary);
      color: var(--color-dark);
    }

    .file-attachments {
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      margin-top: 0.5rem;
    }

    .file-badge {
      background: #e0e0e0;
      padding: 0.3rem 0.7rem;
      border-radius: 6px;
      font-size: 0.85rem;
      display: flex;
      align-items: center;
      gap: 0.3rem;
    }

    .input-area {
      padding: 1.5rem;
      border-top: 1px solid var(--color-border);
      display: flex;
      flex-direction: column;
      gap: 1rem;
    }

    .input-row {
      display: flex;
      gap: 1rem;
    }

    .input-area textarea {
      flex: 1;
      padding: 1rem;
      border: 2px solid var(--color-border);
      border-radius: var(--radius-sm);
      font-family: var(--font-body);
      font-size: 1rem;
      resize: none;
      min-height: 60px;
    }

    .input-area textarea:focus {
      outline: none;
      border-color: var(--color-primary);
    }

    .file-input-label {
      padding: 1rem;
      background: #f8f8f8;
      border: 2px dashed var(--color-border);
      border-radius: var(--radius-sm);
      cursor: pointer;
      text-align: center;
      transition: all 0.2s;
    }

    .file-input-label:hover {
      border-color: var(--color-primary);
      background: #FFF8E7;
    }

    .send-btn {
      padding: 1rem 2rem;
      background: var(--color-primary);
      color: var(--color-dark);
      border: none;
      border-radius: var(--radius-sm);
      font-weight: 700;
      cursor: pointer;
      transition: all 0.2s;
    }

    .send-btn:hover { background: var(--color-primary-hover); }
    .send-btn:disabled { background: #ccc; cursor: not-allowed; }

    .loading {
      display: flex;
      gap: 0.5rem;
      padding: 1rem;
    }

    .loading-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
      background: var(--color-primary);
      animation: bounce 1.4s infinite ease-in-out both;
    }

    .loading-dot:nth-child(1) { animation-delay: -0.32s; }
    .loading-dot:nth-child(2) { animation-delay: -0.16s; }

    @keyframes bounce {
      0%, 80%, 100% { transform: scale(0); }
      40% { transform: scale(1); }
    }
  </style>
<% end %>

<div class="assistant-container">
  <div class="assistant-header">
    <h1><%= t('assistant.title') %></h1>
    <p><%= t('assistant.subtitle') %></p>
  </div>

  <div class="disclaimer">
    <%= t('assistant.disclaimer_html').html_safe %>
  </div>

  <div class="chat-container">
    <div class="messages" id="messages">
      <div class="message assistant">
        <div class="message-avatar">ü§ù</div>
        <div class="message-content">
          <%= t('assistant.welcome_html').html_safe %>
        </div>
      </div>
    </div>

    <div class="input-area">
      <div id="fileList" style="display: none;" class="file-attachments"></div>

      <div class="input-row">
        <textarea id="userInput" placeholder="<%= t('assistant.placeholder') %>"></textarea>
        <button class="send-btn" id="sendBtn"><%= t('assistant.send') %></button>
      </div>

      <label class="file-input-label" for="fileInput">
        <%= t('assistant.attach') %>
        <input type="file" id="fileInput" accept="image/*,application/pdf" multiple style="display: none;">
      </label>
    </div>
  </div>
</div>

<% content_for :scripts do %>
  <script>
    const i18n = {
      error: '<%= j t("assistant.error") %>',
      connectionError: '<%= j t("assistant.connection_error") %>',
      docsAttached: '<%= j t("assistant.docs_attached") %>'
    };

    let conversationHistory = [];
    let attachedFiles = [];
    const messagesDiv = document.getElementById('messages');
    const userInput = document.getElementById('userInput');
    const sendBtn = document.getElementById('sendBtn');
    const fileInput = document.getElementById('fileInput');
    const fileList = document.getElementById('fileList');

    // R√©cup√©rer le CSRF token depuis les meta tags du layout
    const csrfToken = document.querySelector('meta[name="csrf-token"]')?.content;

    function addMessage(content, isUser, files = []) {
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${isUser ? 'user' : 'assistant'}`;

      const avatar = document.createElement('div');
      avatar.className = 'message-avatar';
      avatar.textContent = isUser ? 'üë§' : 'ü§ù';

      const contentDiv = document.createElement('div');
      contentDiv.className = 'message-content';

      if (isUser) {
        contentDiv.innerHTML = content.replace(/\n/g, '<br>');

        if (files.length > 0) {
          const filesDiv = document.createElement('div');
          filesDiv.className = 'file-attachments';
          files.forEach(file => {
            const badge = document.createElement('span');
            badge.className = 'file-badge';
            badge.textContent = `üìé ${file.name}`;
            filesDiv.appendChild(badge);
          });
          contentDiv.appendChild(filesDiv);
        }
      } else {
        let formatted = content
          .replace(/## (.*?)(\n|$)/g, '<h2>$1</h2>')
          .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
          .replace(/\*(.*?)\*/g, '<em>$1</em>')
          .replace(/\n\n/g, '<br><br>')
          .replace(/\n/g, '<br>')
          .replace(/‚Ä¢/g, '&bull;');

        contentDiv.innerHTML = formatted;
      }

      messageDiv.appendChild(avatar);
      messageDiv.appendChild(contentDiv);
      messagesDiv.appendChild(messageDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function showLoading() {
      const loadingDiv = document.createElement('div');
      loadingDiv.className = 'message assistant';
      loadingDiv.id = 'loading';
      loadingDiv.innerHTML = `
        <div class="message-avatar">ü§ù</div>
        <div class="message-content loading">
          <div class="loading-dot"></div>
          <div class="loading-dot"></div>
          <div class="loading-dot"></div>
        </div>
      `;
      messagesDiv.appendChild(loadingDiv);
      messagesDiv.scrollTop = messagesDiv.scrollHeight;
    }

    function hideLoading() {
      const loading = document.getElementById('loading');
      if (loading) loading.remove();
    }

    fileInput.addEventListener('change', (e) => {
      attachedFiles = Array.from(e.target.files);
      updateFileList();
    });

    function updateFileList() {
      if (attachedFiles.length > 0) {
        fileList.style.display = 'flex';
        fileList.innerHTML = '';
        attachedFiles.forEach((file, index) => {
          const badge = document.createElement('span');
          badge.className = 'file-badge';
          badge.innerHTML = `üìé ${file.name} <span style="cursor: pointer; margin-left: 0.5rem;" onclick="removeFile(${index})">√ó</span>`;
          fileList.appendChild(badge);
        });
      } else {
        fileList.style.display = 'none';
      }
    }

    window.removeFile = function(index) {
      attachedFiles.splice(index, 1);
      updateFileList();
    }

    async function fileToBase64(file) {
      return new Promise((resolve, reject) => {
        const reader = new FileReader();
        reader.onload = () => resolve(reader.result.split(',')[1]);
        reader.onerror = reject;
        reader.readAsDataURL(file);
      });
    }

    async function sendMessage() {
      const message = userInput.value.trim();
      if (!message && attachedFiles.length === 0) return;

      const files = [...attachedFiles];
      addMessage(message || i18n.docsAttached, true, files);
      userInput.value = '';
      sendBtn.disabled = true;
      showLoading();

      try {
        const fileContents = await Promise.all(
          files.map(async file => ({
            name: file.name,
            type: file.type,
            data: await fileToBase64(file)
          }))
        );

        const localePrefix = '<%= I18n.locale == I18n.default_locale ? "" : "/#{I18n.locale}" %>';
        const headers = { 'Content-Type': 'application/json' };
        if (csrfToken) headers['X-CSRF-Token'] = csrfToken;

        const response = await fetch(localePrefix + '/assistant-juridique/chat', {
          method: 'POST',
          headers: headers,
          body: JSON.stringify({
            message: message,
            files: fileContents,
            history: conversationHistory
          })
        });

        const data = await response.json();
        hideLoading();

        if (response.status === 429) {
          addMessage(data.error, false);
        } else if (data.error) {
          addMessage(i18n.error, false);
        } else {
          addMessage(data.response, false);
          conversationHistory = data.history;
        }
      } catch (error) {
        hideLoading();
        addMessage(i18n.connectionError, false);
      }

      attachedFiles = [];
      fileInput.value = '';
      updateFileList();
      sendBtn.disabled = false;
      userInput.focus();
    }

    sendBtn.addEventListener('click', sendMessage);
    userInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter' && !e.shiftKey) {
        e.preventDefault();
        sendMessage();
      }
    });
  </script>
<% end %>
