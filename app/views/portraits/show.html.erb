<% content_for :title, "#{@portrait.name} — Les Tisserands" %>

<% content_for :styles do %>
  <style>
    .portrait-show {
      max-width: 700px;
      margin: 3rem auto;
      padding: 0 2rem;
    }

    .back-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      color: var(--color-text-muted);
      text-decoration: none;
      font-size: 0.9rem;
      margin-bottom: 2rem;
      transition: color 0.2s;
    }

    .back-link:hover { color: var(--color-primary); }

    .portrait-show-photo {
      width: 100%;
      height: 400px;
      object-fit: cover;
      border-radius: var(--radius-md);
      margin-bottom: 2rem;
    }

    .portrait-show h1 {
      font-family: var(--font-display);
      font-size: 2.5rem;
      font-weight: 800;
      color: var(--color-dark);
      margin-bottom: 0.3rem;
    }

    .portrait-show-origin {
      font-size: 1rem;
      color: var(--color-text-light);
      margin-bottom: 2rem;
    }

    .portrait-show-quote {
      font-family: var(--font-display);
      font-style: italic;
      font-size: 1.3rem;
      color: #333;
      line-height: 1.7;
      border-left: 4px solid var(--color-primary);
      padding: 1.5rem 2rem;
      background: #FFF8E7;
      border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
      margin-bottom: 2rem;
    }

    .portrait-show-tags {
      display: flex;
      gap: 0.5rem;
      flex-wrap: wrap;
    }
  </style>
<% end %>

<div class="portrait-show">
  <a href="<%= root_path(anchor: 'temoignages') %>" class="back-link">← <%= t('portraits.back', default: 'Retour aux portraits') %></a>

  <% if @portrait.photo_url.present? %>
    <img src="<%= @portrait.photo_url %>" alt="<%= @portrait.name %>" class="portrait-show-photo">
  <% end %>

  <h1><%= @portrait.flag %> <%= @portrait.name %></h1>
  <p class="portrait-show-origin"><%= @portrait.translated_origin %></p>

  <div class="portrait-show-quote">
    "<%= @portrait.translated_quote %>"
  </div>

  <div class="portrait-show-tags">
    <% (@portrait.translated_tags || []).each do |tag| %>
      <span class="tag"><%= tag %></span>
    <% end %>
  </div>
</div>
