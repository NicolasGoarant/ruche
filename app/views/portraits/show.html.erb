<% # Portrait show — uses application layout (navbar + footer included) %>

<style>
  .portrait-hero {
    background: var(--color-dark);
    padding: 4rem 2rem 3.5rem;
    text-align: center;
  }

  .portrait-avatar {
    width: 220px;
    height: 220px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 20%;
    border: 4px solid var(--color-primary);
    box-shadow: 0 8px 32px rgba(245, 168, 0, 0.25);
    margin-bottom: 1.5rem;
  }

  .portrait-hero-name {
    font-family: var(--font-display);
    font-size: 2.4rem;
    font-weight: 700;
    color: white;
    margin-bottom: 0.4rem;
  }

  .portrait-hero-origin {
    font-size: 1rem;
    color: #999;
  }

  .portrait-container {
    max-width: 700px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
  }

  .back-link {
    display: inline-block;
    color: var(--color-primary);
    text-decoration: none;
    font-weight: 600;
    margin-bottom: 2rem;
    font-size: 0.95rem;
    transition: opacity 0.2s;
  }

  .back-link:hover { opacity: 0.7; }

  .portrait-quote-block {
    position: relative;
    background: white;
    border-radius: 16px;
    padding: 2.5rem;
    margin-bottom: 2rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
    border-left: 5px solid;
    border-image: <%= @portrait.stripe_gradient || 'linear-gradient(180deg, #F5A800, #FFD166)' %> 1;
  }

  .portrait-quote-block::before {
    content: '"';
    font-family: var(--font-display);
    font-size: 5rem;
    color: var(--color-primary);
    opacity: 0.2;
    position: absolute;
    top: 0.5rem;
    left: 1.2rem;
    line-height: 1;
  }

  .portrait-quote-text {
    font-family: var(--font-display);
    font-style: italic;
    font-size: 1.35rem;
    color: #333;
    line-height: 1.8;
    position: relative;
    z-index: 1;
  }

  .portrait-stripe-bar {
    height: 5px;
    border-radius: 3px;
    margin-bottom: 2rem;
  }

  @media (max-width: 768px) {
    .portrait-hero { padding: 3rem 1.5rem 2.5rem; }
    .portrait-avatar { width: 180px; height: 180px; }
    .portrait-hero-name { font-size: 1.8rem; }
    .portrait-quote-text { font-size: 1.15rem; }
    .portrait-quote-block { padding: 2rem 1.5rem; }
  }
</style>

<div class="portrait-hero">
  <% if @portrait.photo_url.present? %>
    <img src="<%= @portrait.photo_url %>" alt="<%= @portrait.name %>" class="portrait-avatar" loading="lazy">
  <% end %>
  <div class="portrait-hero-name"><%= @portrait.flag %> <%= @portrait.name %></div>
  <div class="portrait-hero-origin"><%= @portrait.translated_origin %></div>
</div>

<div class="portrait-container">
  <a href="<%= portraits_path %>" class="back-link"><%= t('portrait_show.back', default: '← Retour aux trajectoires') %></a>

  <div class="portrait-stripe-bar" style="background: <%= @portrait.stripe_gradient || 'linear-gradient(90deg, #F5A800, #FFD166)' %>;"></div>

  <div class="portrait-quote-block">
    <div class="portrait-quote-text">
      <%= @portrait.translated_quote %>
    </div>
  </div>

  <div class="portrait-tags">
    <% (@portrait.translated_tags || []).each do |tag| %>
      <span class="tag"><%= tag %></span>
    <% end %>
  </div>
</div>
